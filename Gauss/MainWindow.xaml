<Window x:Class="Gauss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gauss"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Label Content="Количество переменных" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="162,13,0,0" VerticalAlignment="Top" Width="120" Name="VariablesNumber" SelectionChanged="AddColumns"/>
        <Label Content="Количество уравнений" HorizontalAlignment="Left" Margin="295,10,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="438,13,0,0" VerticalAlignment="Top" Width="120" Name="EquationsNumber" SelectionChanged="AddRows"/>
        <Grid HorizontalAlignment="Left" Height="500" Margin="16,41,0,0" VerticalAlignment="Top" Width="800" Name="Matrix" Visibility="Visible"/>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="831,41,0,0" VerticalAlignment="Top" Width="100" Name="Columns"/>

    </Grid>
</Window>
